<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300">

	<mx:Form x="10" y="6">
		<mx:FormItem label="Name">
			<s:TextInput/>
		</mx:FormItem>
		<mx:FormItem label="Portions">
			<s:TextInput/>
		</mx:FormItem>
	</mx:Form>
	
	
	
	<s:Label x="10" y="96" text="Ingredients"/>
	<s:Label x="10" y="116" text="Amount"/>
	<s:Label x="84" y="116" text="Ingredient"/>
	<s:TextInput x="10" y="136" width="{amountFieldWidth}"/>
	<s:TextInput x="84" y="136" width="{ingredientFieldWidth}"/>
	<s:Button x="317" y="136" label="Add" click = "addNewIngredient();"/>
	<s:Button x="318" y="236" label="Submit"/>
	<s:Button x="240" y="236" label="Cancel"/>
	
	<fx:Script>
		var ingredientFieldYPositionStart:int = 136;
		var ingredientFieldYPositionNew:int = ingredientFieldYPositionStart + 15;
		
		var amountFieldWidth:int = 63;
		var ingredientFieldWidth:int = 225;
		
		private function addNewIngredient():void
		{
			var amount:TextInput = new TextInput();
			amount.x = 10;
			amount.y = ingredientFieldYPositionNew;
			amount.width = amountFieldWidth;
			addElement(amount);
			ingredientFieldYPositionStart = ingredientFieldYPositionNew;
			ingredientFieldYPositionNew += 15;
		}
	</fx:Script>
	
</s:TitleWindow>



