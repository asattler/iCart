<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    id="WebApp_ID" version="2.5">
    <display-name>interactive shopping cart</display-name>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>de.bht.mme2.icart.ocp.user.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>de.bht.mme2.icart.ocp.user.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>de.bht.mme2.icart.ocp.user.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRecipeServlet</servlet-name>
        <servlet-class>de.bht.mme2.icart.ocp.recipe.servlets.AddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddOwnRecipeServlet</servlet-name>
        <servlet-class>de.bht.mme2.icart.ocp.recipe.servlets.AddOwnServlet</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>ListRecipesServlet</servlet-name>
        <servlet-class>de.bht.mme2.icart.ocp.recipe.servlets.ListRecipesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportRecipesServlet</servlet-name>
        <servlet-class>de.bht.mme2.icart.ocp.recipe.servlets.ImportRecipesServlet</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>DeleteRecipeServlet</servlet-name>
        <servlet-class>de.bht.mme2.icart.ocp.recipe.servlets.DeleteRecipeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteRecipeServlet</servlet-name>
        <url-pattern>/deleteRecipe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportRecipesServlet</servlet-name>
        <url-pattern>/importRecipes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListRecipesServlet</servlet-name>
        <url-pattern>/listRecipes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddOwnRecipeServlet</servlet-name>
        <url-pattern>/addOwnRecipe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRecipeServlet</servlet-name>
        <url-pattern>/addRecipe</url-pattern>
    </servlet-mapping>
</web-app>